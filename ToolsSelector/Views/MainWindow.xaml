<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToolsSelector"
        xmlns:Models="clr-namespace:ToolsSelector.Models" x:Class="ToolsSelector.MainWindow"
        mc:Ignorable="d"
        Title="Tools Selector" Height="600         " Width="900">
   
    <Grid>
        <ComboBox x:Name="categoryCombo" ItemsSource="{Binding x}"   DisplayMemberPath="Category" SelectedValuePath="Category" SelectedItem="{Binding Tool}" Loaded="CategoryCombo_Loaded" HorizontalAlignment="Left" Margin="380,45,0,0" VerticalAlignment="Top" Width="120" />
        <Label x:Name="webPageLabel" Content="Web Page" HorizontalAlignment="Left" Margin="65,223,0,0" VerticalAlignment="Top" Width="65" Height="30" RenderTransformOrigin="0.462,2.173"/>
        <Label x:Name="descriptionLabel" Content="Description " HorizontalAlignment="Left" Margin="395,228,0,0" VerticalAlignment="Top" Width="75" Height="25"/>
        <ComboBox x:Name="webPageCombo" Loaded="WebPageCombo_Loaded" HorizontalAlignment="Left" Margin="40,253,0,0" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="descriptionCombo" Loaded="DescriptionCombo_Loaded" HorizontalAlignment="Left" Margin="380,253,0,0" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="nameLabel" Content="Name" HorizontalAlignment="Left" Margin="70,19,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.125,-0.187" Width="60"/>
        <ComboBox x:Name="nameCombo" ItemsSource="{Binding XPath, Mode=OneWay}" SelectedItem=""  Loaded="NameCombo_Loaded" HorizontalAlignment="Left" Margin="40,45,0,0" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="categoryLabel" Content="Category" HorizontalAlignment="Left" Margin="410,19,0,0" VerticalAlignment="Top" Width="60"/>
        <Label x:Name="featuresLabel" Content="Services/Features" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,410,0,0" Width="110"/>
        <Label x:Name="typeLabel" Content="Type" HorizontalAlignment="Left" Margin="760,19,0,0" VerticalAlignment="Top" Width="80"/>
        <ComboBox x:Name="featuresCombo" Loaded="FeaturesCombo_Loaded" HorizontalAlignment="Left" Margin="40,435,0,0" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="typeCombo" Loaded="TypeCombo_Loaded" HorizontalAlignment="Left" Margin="720,45,0,0" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="trialPeriodLabel" Content="Trial Period" HorizontalAlignment="Left" Margin="745,227,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.472,1.594"/>
        <ComboBox x:Name="trialPeriodCombo" Loaded="TrialPeriodCombo_Loaded" HorizontalAlignment="Left" Margin="720,253,0,0" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="priceLabel" Content="Price" HorizontalAlignment="Left" Margin="410,409,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.005,0.016" Width="60"/>
        <ComboBox x:Name="priceCombo" Loaded="priceCombo_Loaded" HorizontalAlignment="Left" Margin="380,435,0,0" VerticalAlignment="Top" Width="120" RenderTransformOrigin="1.295,0.455"/>


    </Grid>
</Window>
